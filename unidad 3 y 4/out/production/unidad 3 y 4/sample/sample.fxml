<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="610.0" prefWidth="427.0" spacing="20.0" styleClass="fondo" stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <Label prefHeight="371.0" prefWidth="401.0" styleClass="titulo" stylesheets="@estilos.css" textFill="WHITE">
            <font>
                <Font size="30.0" />
            </font>
        </Label>
        <TextField fx:id="txtusuario" maxWidth="200.0" promptText="Usuario" styleClass="buttonTexfield">
            <font>
                <Font name="System Bold Italic" size="12.0" />
            </font></TextField>
        <PasswordField fx:id="txtclave" maxWidth="200.0" onKeyPressed="#enter" prefHeight="20.0" prefWidth="200.0" promptText="Password" styleClass="buttonTexfield">
            <font>
                <Font name="System Bold Italic" size="12.0" />
            </font></PasswordField>
        <Button fx:id="login" maxWidth="150.0" mnemonicParsing="false" onAction="#login" styleClass="buttonAceptar" text="Iniciar sesion " />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
